---
import Nav from '../components/Nav.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../../public/device-desktop.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="">
		<slot />
	</body>
</html>
<style is:global>
@import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&family=Oxygen:wght@300;400;700&display=swap');
body {
	font-family: 'Montserrat', sans-serif;
	margin: 0;
	padding: 0;
	background-image: radial-gradient(circle at 30% 30%, rgba(255, 0, 0, 0.5), transparent 60%),
                      radial-gradient(circle at 70% 70%, rgba(0, 0, 255, 0.5), transparent 60%),
                      radial-gradient(circle at 50% 50%, rgba(0, 255, 0, 0.5), transparent 60%),
                      radial-gradient(circle at 20% 80%, rgba(255, 255, 0, 0.5), transparent 60%),
                      radial-gradient(circle at 80% 20%, rgba(255, 0, 255, 0.5), transparent 60%);
	background-color: #191919; /* Fondo base */
	background-blend-mode: screen;
	height: 100vh; /* Asegurar que el fondo cubra toda la pantalla */
}


</style>
