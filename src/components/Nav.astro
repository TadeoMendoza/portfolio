<script>
    window.addEventListener('scroll', () => {
        const nav = document.querySelector('nav') as HTMLElement;
        if (window.scrollY > 0) {
            nav.classList.add('bg-[#191919]/40', 'backdrop-blur-xl', 'text-[#F9F6EE]');
            nav.classList.remove('text-[#191919]');

        } else {
            nav.classList.remove('bg-[#191919]/40', 'backdrop-blur-xl', 'text-[#F9F6EE]');
            nav.classList.add('text-[#191919]');
        }
    });
    const navButton = document.getElementById('showNavMenu') as HTMLButtonElement;
    const navMenu = document.querySelector('nav > div') as HTMLElement;
    navButton.addEventListener('click', () => {
        navMenu.classList.toggle('hidden');
    });
</script>